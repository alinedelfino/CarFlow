@model CarFlow.Models.SalesAdvisorRateInfo

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="SalesAdvisors" asp-action="Index" method="get">
    <p>        
        Sales Advisor Name: <input type="text" name="name">
        <input type="submit" value="Get Info" />
    </p>
</form>
Number of Sales: @Model.numSales <br>
Average Rating: @Model.avgRating
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.salesAdvisor[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.salesAdvisor[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.salesAdvisor[0].Telephone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.salesAdvisor[0].BirthDay)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.salesAdvisor[0].Sallary)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.salesAdvisor) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sallary)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
